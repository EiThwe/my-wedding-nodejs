{
  "compilerOptions": {
    "target": "ESNext", // or "ES6"
    "module": "CommonJS", // Change this to "ESNext" for ES modules
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Source directory of TypeScript files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Adjust according to your source directory
  "exclude": ["node_modules"]
}
